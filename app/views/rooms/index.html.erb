<div class="container mx-auto mt-12 px-5 w-8/12">
  <nav class="pb-12 border-b border-blue-200">
    <%= link_to root_path, class: "font-semibold flex" do %>
      <%= image_tag "turbo.svg", size: 40 %>
      <p class="ml-2 text-turbo text-4xl">
        <i>TURBO</i>
        <span class="text-2xl">chat</span>
      </p>
    <% end %>
  </nav>

  <% if notice.present? %>
    <div id="notice" class="mb-4 bg-teal-100 border-l-4 border-teal-500 text-teal-700 p-4" role="notice">
      <p><%= notice %></p>
    </div>
  <% end %>

  <h1 class="font-bold text-4xl mt-8 mb-12">Rooms</h1>

  <%#= turbo_stream_from "rooms" %>
  <div id="rooms">
    <%= render partial: "rooms/room", collection: @rooms, as: :room %>
  </div>

  <%= link_to "Create a room", new_room_path, class: "mt-4 w-40 auto block bg-blue-500 hover:bg-blue-700 text-white text-center font-bold py-3 px-4 rounded-full" %>
</div>
